pipeline {
    agent any

    stages {

        stage('Build Angular') {
            agent {
                docker {
                    image 'node:lts-bullseye'
                    args '''
                        -v $HOME/.npm:/root/.npm:z
                        -u root
                        --network devops
                    '''
                    reuseNode true
                }
            }
            steps {
                dir('biblio-angular') {
                    
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('biblio-angular') {
                   
                    sh 'docker build -t ajc/biblio:angular .'
                }
            }
        }

        stage('Docker Deploy') {
            steps {
                dir('DOCKER/commandes/compose/quest') {
                    sh 'docker compose up -d'
                }
            }
        }
    }
}